<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cvScheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvScheduleTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:text="@string/_14_30" />

    </android.support.v7.widget.CardView>


    <View
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/cvScheduleTime"
        app:layout_constraintStart_toStartOf="@id/cvScheduleTime"
        app:layout_constraintTop_toBottomOf="@+id/cvScheduleTime" />

    <TextView
        android:id="@+id/tvScheduleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/learn_english"
        android:textAppearance="@style/TextAppearance.My.TargetTitles"
        app:layout_constraintEnd_toStartOf="@+id/animCheckBoxSchedule"
        app:layout_constraintStart_toEndOf="@id/cvScheduleTime"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end" />

    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
        android:id="@+id/animCheckBoxSchedule"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

