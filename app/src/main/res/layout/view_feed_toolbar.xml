<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collapsingToolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:fitsSystemWindows="true"
    app:collapsedTitleTextAppearance="@style/CollapsedTitle"
    app:expandedTitleMargin="16dp"
    app:contentScrim="@color/style_color_primary"
    app:expandedTitleTextAppearance="@style/ExpandedTitle"
    app:layout_scrollFlags="scroll|exitUntilCollapsed"
    app:scrimAnimationDuration="400"
    app:scrimVisibleHeightTrigger="100dp"
    app:statusBarScrim="#00000000">

    <ImageView
        android:id="@+id/expandedImage5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.5" />

    <ImageView
        android:id="@+id/expandedImage3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.3" />

    <ImageView
        android:id="@+id/expandedImage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.2" />

    <ImageView
        android:id="@+id/expandedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.1" />

<!--    <ImageView-->
<!--        android:id="@+id/expandedImage4"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:fitsSystemWindows="true"-->
<!--        app:layout_collapseMode="parallax"-->
<!--        app:layout_collapseParallaxMultiplier="0.4" />-->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin" />

</com.google.android.material.appbar.CollapsingToolbarLayout>